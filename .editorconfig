# top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{yml,yaml,proto,rb}]
indent_style = space
indent_size = 2

# tab indentation
[{*.go,Makefile}]
indent_style = tab
indent_size = 4
